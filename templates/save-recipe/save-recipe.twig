{% extends 'base.html.twig' %}

{% block title %}{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>save recipe</h1>
    <form name=form action="/saved" method="post">
        <label for="title">Title</label>
        <input type="text" name="title"><br>

        <label for="ingredients">Ingredients</label> 
        <input type="text" name="ingredients"><br>

        <label for="steps">Steps</label>
        <input type="text" name="steps"><br>

        <label for="prep_time">Prep time</label>
        <input type="text" name="prep_time"><br>

        <label for="skill">Skill level</label>
        <input type="text" name="skill"><br>

        <label for="method">Method</label>
        <input type="text" name="method"><br>

        <label for="catagory">Category</label>
        <input type="text" name="catagory"><br>

        <input type="submit" value="Submit">
      </form>
</div>
{% endblock %}
